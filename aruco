                //               morphologyEx(fream,fream,MORPH_OPEN,elem);
                //               morphologyEx(fream,fream,MORPH_CLOSE,elem);
                putText(fream,"BLUE",Point(60,60),FONT_HERSHEY_SIMPLEX,2,Scalar(0,0,0));
                cout<<"the color now is "<<"è“"<<endl;          
            }

                  imshow("end",fream);
 waitKey(1);
    }

        return 0;
    }



